<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Client.InitialForm">
    <ContentPage.Content>
        <StackLayout BackgroundColor="Aqua">
            <Label Text="Анкета" Margin="40, 10"
                VerticalOptions="Start" FontSize="24"
                HorizontalOptions="CenterAndExpand" />
            <Label Text="5/11"
                   VerticalOptions="Start" FontSize="16"
                   HorizontalOptions="CenterAndExpand" />
            <Label Text="Перечислите списком множества событий, которые под действием установки, человек сделал и делает за свою жизнь" x:Name="question"
                   VerticalOptions="Start" Margin="20, 5"
                   HorizontalOptions="CenterAndExpand" FontSize="18"/>
            <Editor BackgroundColor="Bisque" VerticalOptions="FillAndExpand" x:Name="answer" Margin="20, 5"/>
            <Button BackgroundColor="Gold" VerticalOptions="End" Margin="40, 20" Text="Далее" FontSize="20"
                    x:Name="nextBtn" Clicked="NextBtn_OnClicked"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>