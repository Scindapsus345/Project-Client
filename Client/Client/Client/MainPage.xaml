<?xml version="1.0" encoding="utf-8" ?>
<TabbedPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:client="clr-namespace:Client;assembly=Client"
             xmlns:xamarinForms="clr-namespace:BottomBar.XamarinForms;assembly=BottomBar.XamarinForms"
             x:Class="Client.MainPage"
             xmlns:android="clr-namespace:Xamarin.Forms.PlatformConfiguration.AndroidSpecific;assembly=Xamarin.Forms.Core"
             android:TabbedPage.ToolbarPlacement="Bottom"
             BarBackgroundColor="white"
             SelectedTabColor="LightSkyBlue"
             UnselectedTabColor="Black">

    <!--Pages can be added as references or inline-->
    <ContentPage IconImageSource="meditation_icon">
        <Label Text="meditation"/>
    </ContentPage>

    <ContentPage IconImageSource="concentration_icon">
        <Label Text="concentration"/>
    </ContentPage>

    <ContentPage IconImageSource="fire_icon"
                 x:Name="fire_content">
        <Label Text="fire"/>
    </ContentPage>

    <ContentPage IconImageSource="book_icon">
        <Label Text="books"/>
    </ContentPage>

    <ContentPage IconImageSource="profile_icon">
        <Label Text="profile"/>
    </ContentPage>
</TabbedPage>