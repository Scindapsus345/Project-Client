<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Client.AddHabitsPage"
             BackgroundColor="White"
             NavigationPage.HasNavigationBar="False">
    <ContentPage.Content>
        <StackLayout>
            <Grid Margin="10,0,0,0" x:Name="grid">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="6*"/>
                    <ColumnDefinition Width="1*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="60"/>
                </Grid.RowDefinitions>
                <Label Text="Добавить привычки" FontSize="32" TextColor="Black" FontAttributes="Bold" Grid.Column="0"/>
            </Grid>
            <ListView x:Name="list"/>
            <Button WidthRequest="250" HeightRequest="50" HorizontalOptions="Center" CornerRadius="25" Margin="0,15,0,30"
                    Text="Принять" FontSize="30" Padding="0" BackgroundColor="#00AA0A" FontAttributes="Bold" TextColor="White"
                    Clicked="Back"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>