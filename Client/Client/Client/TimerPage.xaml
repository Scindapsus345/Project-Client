<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Client.TimerPage"
             NavigationPage.HasNavigationBar="False">
    <ContentPage.Content>
        <StackLayout VerticalOptions="Center" Margin="0,20,0,0">
            <Label x:Name="time" Text="20:15" FontSize="70" FontAttributes="Bold"
                   HorizontalOptions="CenterAndExpand" />
            <Button x:Name="pauseBtn" Text="Пауза" Clicked="Pause" Margin="60, 50, 60, 0" CornerRadius="15"
                    FontSize="30" FontAttributes="Bold" TextColor="White"/>
            <Button x:Name="finishBtn" Text="Закончить" Clicked="Finish" Margin="60, 10" CornerRadius="15"
                    FontSize="30" FontAttributes="Bold" TextColor="White"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>