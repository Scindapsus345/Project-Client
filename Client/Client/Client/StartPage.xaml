<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Client.StartPage"
             NavigationPage.HasNavigationBar="False">
    <ContentPage.Content>
        <StackLayout>
            <CarouselView x:Name="CarouselView">
                <CarouselView.ItemTemplate>
                    <DataTemplate>
                        <Grid>
                            <Image Source="{Binding .ImageName}" VerticalOptions="Start"/>
                            <Label Text="{Binding .Text}" FontSize="60" TextColor="White"/>
                            <Button Text="Начать" VerticalOptions="End" Margin="100, 30" HeightRequest="60" BorderColor="Aqua"
                                    FontSize="24" BackgroundColor="DodgerBlue" TextColor="White" IsVisible="{Binding .IsLast}"
                                    x:Name="btnStart" Clicked="ToMainPage"/>
                        </Grid>
                    </DataTemplate>
                </CarouselView.ItemTemplate>
            </CarouselView>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>